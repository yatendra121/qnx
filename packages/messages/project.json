{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/messages/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm build",
            "forwardAllArgs": true
          }
        ],
        "cwd": "packages/messages",
        "outputPath": "packages/messages/dist"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "outputPath": "dist",
        "command": "node tools/scripts/publish.mjs messages"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/messages/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/messages"],
      "options": {
        "jestConfig": "packages/messages/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
