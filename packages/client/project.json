{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/client/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm build",
            "forwardAllArgs": true
          }
        ],
        "cwd": "packages/client",
        "outputPath": "packages/client/dist"
      },
      "outputs": ["{workspaceRoot}/packages/client/dist"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx tools/scripts/publish.ts client "
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/client/**/*.ts"]
      }
    },
    "jest": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/client/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/response"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/response"
      }
    },
    "vitest": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm test",
            "forwardAllArgs": true
          }
        ],
        "cwd": "packages/client"
      }
    }
  },
  "tags": []
}
