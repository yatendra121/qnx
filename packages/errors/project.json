{
  "name": "errors",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/errors/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm  build",
            "forwardAllArgs": true
          }
        ],
        "cwd": "packages/errors",
        "outputPath": "packages/errors/dist"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "outputPath": "dist",
        "command": "tsx tools/scripts/publish.ts errors "
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/errors/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["coverage/packages/errors"],
      "options": {
        "jestConfig": "packages/errors/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "vitest": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm test",
            "forwardAllArgs": true
          }
        ],
        "cwd": "packages/errors"
      }
    }
  },
  "tags": []
}
